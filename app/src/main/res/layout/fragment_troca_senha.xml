<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TrocaSenhaFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Troca de Senha"
            style="@style/TextAppearance.AppCompat.Title"
            android:gravity="center"
            android:padding="10dp"
            android:background="#9DCE81">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha Atual">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inpt_senhaAtual_troca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nova Senha">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inpt_senhaNova_troca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmação Nova Senha">

        </TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inpt_senhaNovaConf_troca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_confTrocaSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:padding="10dp"
            android:text="Confirmar">
        </Button>




    </LinearLayout>

</FrameLayout>